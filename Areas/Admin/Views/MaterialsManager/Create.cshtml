@model MnsLocation5.ViewsModel.CreateMaterialViewModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

<h1>Create</h1>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input name="MaterialName" asp-for="Material.Name" class="form-control" required/>
                <span asp-validation-for="MaterialTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="Material.Type" class="control-lable"></label>
              <select asp-for="MaterialTypeID" asp-items="Model.ListType" class="custom-select">
              </select>
            </div>            
            <div class="form-group">
                <label asp-for="Material.Condition" class="control-label"></label>
                <select asp-for="Material.Condition" asp-items="Model.ListConditions" class="custom-select" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Material.Statut" class="control-label"></label>
                <select asp-for="Material.Statut" asp-items="Model.ListStatut" class="custom-select" ></select>
            </div>
            <div class="form-group">
                <label>Quantité</label>
                <input type="number" min="0" name="NewMaterialQuantity" class="form-control" required />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
